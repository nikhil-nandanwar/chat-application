@{
    ViewData["Title"] = "Chat Room";
}

<div class="chat-app">
    <!-- Room Header -->
    <header class="chat-header">
        <div class="header-content">
            <div class="room-info">
                <div class="room-title">
                    <i class="fas fa-comments"></i>
                    <span>Room: <strong id="roomCodeDisplay">----</strong></span>
                </div>
                <div class="room-meta">
                    <div class="timer">
                        <i class="fas fa-clock"></i>
                            <div class="time-display">
                                <span id="timeRemaining">--:--:--</span>
                                <small class="expires-at text-light ms-2" id="expiresAtLabel"></small>
                            </div>
                            <div class="progress time-progress mt-2" style="height:6px; width:200px;">
                                <div id="timeProgressBar" class="progress-bar bg-light" role="progressbar" style="width: 100%;"></div>
                            </div>
                    </div>
                    <div class="participants-count">
                        <i class="fas fa-users"></i>
                        <span id="participantCount">0</span>/<span id="maxParticipants">20</span>
                    </div>
                </div>
            </div>
            <div class="header-actions">
                <button id="leaveRoomBtn" class="btn-leave">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Leave</span>
                </button>
            </div>
        </div>
    </header>

    <!-- Chat Messages Area -->
    <main class="chat-main">
        <div class="messages-container" id="chatMessages">
            <div class="welcome-message">
                <div class="welcome-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <h3>Welcome to the chat room!</h3>
                <p>Start the conversation and connect with others...</p>
            </div>
        </div>
    </main>

    <!-- Message Input -->
    <footer class="chat-footer">
        <div class="message-composer">
            <div class="input-container">
                <input type="text" id="messageInput" placeholder="Type your message..." maxlength="1000" disabled>
                <button id="sendMessageBtn" class="btn-send" disabled>
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </footer>

    <!-- Participants Panel -->
    <aside class="participants-sidebar">
        <button class="sidebar-toggle" data-bs-toggle="collapse" data-bs-target="#participantsList">
            <i class="fas fa-users"></i>
            <span class="toggle-text">Participants</span>
        </button>
        <div class="collapse" id="participantsList">
            <div class="participants-content">
                <div class="participants-header">
                    <h6>Online Users</h6>
                    <span class="count-badge" id="participantsCountBadge">0</span>
                </div>
                <div id="participantsContainer" class="participants-list">
                    <!-- Participants will be populated by JavaScript -->
                </div>
            </div>
        </div>
    </aside>

    <!-- Connection Status -->
    <div id="connectionStatus" class="connection-banner d-none">
        <div class="banner-content">
            <i class="fas fa-exclamation-triangle"></i>
            <span id="connectionMessage">Connecting...</span>
        </div>
    </div>

    <!-- Notification Toast -->
    <div class="notification-container">
        <div id="notificationToast" class="notification-toast" role="alert">
            <div class="toast-content">
                <div class="toast-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="toast-body">
                    <strong>Notification</strong>
                    <div id="notificationBody"></div>
                </div>
                <button type="button" class="toast-close" data-bs-dismiss="toast">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/chat.js"></script>
}