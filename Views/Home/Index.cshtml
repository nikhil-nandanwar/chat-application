@{
    ViewData["Title"] = "Real-Time Chat";
}

<div class="hero-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 mb-4">
                    <i class="fas fa-comments text-primary"></i>
                    Real-Time Chat
                </h1>
                <p class="lead mb-5">Create temporary chat rooms with customizable expiration times. No registration required!</p>
                
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-plus-circle text-success fa-3x"></i>
                                </div>
                                <h5 class="card-title">Create New Room</h5>
                                <p class="card-text">Start a new chat room and get a 4-digit code to share with others.</p>
                                <div class="mb-3">
                                    <input type="text" id="createUsername" class="form-control" placeholder="Enter your username" maxlength="20">
                                </div>
                                <div class="mb-3">
                                    <label for="expirationMinutes" class="form-label">Room Expiration (minutes)</label>
                                    <select id="expirationMinutes" class="form-select">
                                        <option value="15">15 minutes</option>
                                        <option value="30">30 minutes</option>
                                        <option value="60" selected>1 hour</option>
                                        <option value="120">2 hours</option>
                                        <option value="240">4 hours</option>
                                        <option value="480">8 hours</option>
                                        <option value="1440">24 hours</option>
                                    </select>
                                </div>
                                <button id="createRoomBtn" class="btn btn-success btn-lg">
                                    <i class="fas fa-plus me-2"></i>Create Room
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-sign-in-alt text-primary fa-3x"></i>
                                </div>
                                <h5 class="card-title">Join Existing Room</h5>
                                <p class="card-text">Enter a 4-digit room code to join an existing chat room.</p>
                                <div class="mb-3">
                                    <input type="text" id="joinUsername" class="form-control mb-2" placeholder="Enter your username" maxlength="20">
                                    <input type="text" id="roomCodeInput" class="form-control" placeholder="Enter 4-digit room code" maxlength="4" pattern="[0-9]{4}">
                                </div>
                                <button id="joinRoomBtn" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Join Room
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="feature-box">
                    <i class="fas fa-clock text-warning fa-2x mb-3"></i>
                    <h5>Custom Expiration</h5>
                    <p>Set room expiration from 15 minutes to 24 hours</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <i class="fas fa-users text-info fa-2x mb-3"></i>
                    <h5>Up to 20 Users</h5>
                    <p>Maximum 20 participants per room</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <i class="fas fa-bolt text-danger fa-2x mb-3"></i>
                    <h5>Real-Time</h5>
                    <p>Messages appear instantly</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <i class="fas fa-shield-alt text-success fa-2x mb-3"></i>
                    <h5>Privacy First</h5>
                    <p>No data stored permanently</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Modal -->
<div class="modal fade" id="loadingModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h5 id="loadingText">Creating room...</h5>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/home.js"></script>
}