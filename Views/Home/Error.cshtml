@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-content">
                <i class="fas fa-exclamation-triangle text-warning fa-4x mb-4"></i>
                <h1 class="display-4 mb-3">Oops! Something went wrong</h1>
                <p class="lead mb-4">We encountered an unexpected error. Please try again.</p>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="/" class="btn btn-primary btn-lg me-md-2">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </button>
                </div>
                
                <div class="mt-5">
                    <small class="text-muted">
                        If this problem persists, please refresh the page or try again later.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-content {
    padding: 2rem;
    background: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}
</style>